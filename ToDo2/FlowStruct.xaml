<Window x:Class="ToDo2.FlowStruct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDo2"
        mc:Ignorable="d"
        Title="FlowStruct" AllowsTransparency="True" WindowStyle="None">
    <Window.Background>
        <SolidColorBrush Color="Black" Opacity="0"/>
    </Window.Background>
    <Grid x:Name="A1G">
        <Canvas>
            <Border BorderBrush="Black" BorderThickness="3" Background="#FF565656" Opacity="0.9" Padding="20">
                <StackPanel x:Name="A1SP"/>
            </Border>
        </Canvas>
    </Grid>
</Window>
